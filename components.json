{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "app/globals.css",
    "baseColor": "neutral",
    "cssVariables": true,
    "prefix": "ui",
    "fonts": {
      "body": "Inter, sans-serif",
      "heading": "Poppins, sans-serif"
    },
    "colors": {
      "primary": "#1D4ED8",
      "secondary": "#9333EA"
    },
    "borderRadius": {
      "DEFAULT": "8px",
      "sm": "4px",
      "lg": "16px"
    },
    "spacing": {
      "4": "1rem",
      "8": "2rem",
      "16": "4rem"
    },
    "container": {
      "center": true,
      "padding": "1rem"
    },
    "components": {
      "button": {
        "default": "bg-primary text-white py-2 px-4 rounded",
        "hover": "hover:bg-secondary",
        "focus": "focus:ring-4 focus:ring-secondary"
      }
    }
  }
}
